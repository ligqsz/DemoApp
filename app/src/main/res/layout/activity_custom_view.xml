<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.pax.demoapp.ui.activity.CustomViewActivity">

    <com.pax.demoapp.view.CircleView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:circle_color="@color/greed"
        app:text_color="@color/colorAccent"
        app:text_size="20sp"
        app:text_str="@string/app_name" />

    <com.pax.demoapp.view.TickView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:background_color="@color/white"
        app:checked_color="@android:color/holo_green_dark"
        app:checked_tick_color="@android:color/holo_red_dark"
        app:ring_radius="20dp"
        app:ring_width="4dp"
        app:unchecked_color="@android:color/darker_gray" />
</LinearLayout>
